  <!-- optionally you can create a dir "jira-exploded" on the same dir and extract atlassian-jira-3.12.1.war on "jira-exploded" dir and use this instead:
        <Set name="war">E:/WEBTIDE/TESTS/jira/atlassian-jira-standard-3.12.1/dist-generic/jira-exploded</Set>
     -->

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
